<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="600.0"
            styleClass=".text-field {    -fx-background-color: rgba(53,89,119,0.4);}"
            xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ninjarlz.projectroentgen.view.gui.MainView">

    <top>
        <AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml/1" BorderPane.alignment="CENTER" styleClass="menu-bar">
            <MenuBar AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="%file">
                    <MenuItem fx:id="loadMenuItem" mnemonicParsing="false" text="%load"/>
                    <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" onAction="#closeAction" text="%close"/>
                </Menu>
                <Menu fx:id="languageMenu" mnemonicParsing="false" text="%language">
                    <MenuItem fx:id="englishMenuItem" mnemonicParsing="false" onAction="#changeToEnglishAction"
                              text="%english"/>
                    <MenuItem fx:id="polishMenuItem" mnemonicParsing="false" onAction="#changeToPolishAction" text="%polish"/>
                </Menu>
            </MenuBar>
            <Label fx:id="authorsLabel" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   style="-fx-font-weight: bold; -fx-text-fill: black; " />
        </AnchorPane>
    </top>
</BorderPane>
